  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:site-repo": "tsx ./scripts/build-site-repo.ts",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist dist-site-repo .astro .cache && pnpm install",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "format": "pnpm run format:code",
    "format:ci": "pnpm run format:imports && pnpm run format:code",
