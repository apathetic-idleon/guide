{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./*"],
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@site-config/*": ["site-config/*"],
      "@assets/*": ["src/assets/*"]
    }
  } 
}
