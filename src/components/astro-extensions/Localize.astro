---
// given a string, we output the string
// given an object with language properties, we output the currentLocale one, or defaultLocale as fallback

import { actualDefaultLocale } from '@config/translation';
import { localize } from '@utils/localize';

const { text } = Astro.props;
let finalText = localize(text, Astro.currentLocale!, actualDefaultLocale);
---

<Fragment set:html={finalText}>
